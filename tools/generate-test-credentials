#!/usr/bin/env bash
set -e

cd "$(dirname "$0")"/..

email=iago@zulip.com
email_secondary=hamlet@zulip.com
password=$(python manage.py print_initial_password "$email" | fgrep "$email" | awk '{ print $2 }')
password_secondary=$(python manage.py print_initial_password "$email_secondary" | fgrep "$email_secondary" | awk '{ print $2 }')
cat > frontend_tests/casper_lib/test_credentials.js <<EOF
// Generated by tools/generate-test-credentials
var test_credentials = {default_user: {username: 'iago@zulip.com', password: '$password'}};
try { exports.test_credentials = test_credentials; } catch (e) {}
EOF
cat > frontend_tests/casper_lib/test_credentials_secondary.js <<EOF
// Generated by tools/generate-test-credentials
var test_credentials_secondary = {username: 'hamlet@zulip.com', password: '$password_secondary'};
try { exports.test_credentials_secondary = test_credentials_secondary; } catch (e) {}
EOF
